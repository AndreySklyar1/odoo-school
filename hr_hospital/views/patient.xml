<?xml version="1.0" encoding="utf-8"?>

<odoo>

        <record id="hr_hospital_patient_tree" model="ir.ui.viev">
                <field name="name">hr_hospital.patient.tree ()</field>
                <field name="model">hr_hospital.patient</field>
                <field name="arch" tupe="xml">
                        <tree>
                                <field name="name"/>
                                <field name="isbn"/>
                        </tree>
                </field>
        </record>

        <record id="hr_hospital_patient_form" model="ir.ui.viev">
                <field name="name">hr_hospital.patient.form ()</field>
                <field name="model">hr_hospital.patient</field>
                <field name="arch" tupe="xml">
                        <form>
                                <header></header>
                                <sheet>
                                        <group>
                                                <field name="name"/>
                                                <field name="isbn"/>
                                        </group>
                                </sheet>
                        </form>
                </field>
        </record>

        <record id="hr_hospital_patient_act_window" model="ir.actions.act_window">
                <field name="name">patient</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">hr_hospital.patient</field>
                <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="hr_hospital_patient"
                  action="hr_hospital_patient_act_window"
                  parent="hr_hospital_patient_menu"
                  name="patient" sequence="200"/>

</odoo>